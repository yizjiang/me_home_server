<h2>Sign in</h2>
<%= form_for(resource, as: resource_name, url: new_user_session_path(resource_name) + "?redirect_url=#{params[:redirect_url]}") do |f| %>
  <div class="field"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="field"><div><%= f.submit "Sign in" %></div>
<% end %>

<h3>微信登陆: 扫描后请点击确定</h3>
<%= image_tag('service_account.png', size: "150x150") %>
<%= link_to '<button type="button">确定</button>'.html_safe, '/wechat_login' %>
