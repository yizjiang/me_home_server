<h1>Listing post_cards</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @post_cards.each do |post_card| %>
    <tr>
      <td><%= post_card.content %></td>
      <td><%= post_card.user_id %></td>
      <td><%= link_to 'Show', post_card %></td>
      <td><%= link_to 'Edit', edit_post_card_path(post_card) %></td>
      <td><%= link_to 'Destroy', post_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

